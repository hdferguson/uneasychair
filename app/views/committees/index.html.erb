<p id="notice"><%= notice %></p>

<h1>Committees</h1>
<% if current_account.accountable_type == "SuperAccount" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Conference</th>
      <th>PC Chair</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.name %></td>
        <td><%= committee.conference %></td>
        <td><%= committee.user.name %></td>
        <td><%= link_to 'Show', committee %></td>
        <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
        <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Committee', new_committee_path %>
<% else %>
    <h3>Admins only.</h3>
<% end %>