
<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<br />
<h1>Committees</h1>


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Conference</th>
      <th>PC Chair</th>
      
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
          <% if committee.user.id == current_account.id || committee.conference.chairid == current_account.id %>
              <td><%= committee.name %></td>
              <td><%= committee.conference.name %></td>
              <td><%= committee.user.name %></td>
              <td><%= link_to 'Show', committee %></td>
              <% if committee.conference.chairid == current_account.id %>
                  <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
                  <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              
              <% end %>
          <% end %>
  <div class>
  <%= flash[:notice] %>
  </div>
<% end %>
<br>
