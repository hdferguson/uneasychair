<h1>Tracks</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Role </th>
      <th>Conference </th>
      <th>Committee</th>
      <th>Account </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <% @state = false %>
      <% if(track.userid == current_account.id) %>
      <tr>
        <td><%= track.role %></td>
        <td><%= track.conference.name %></td>
        <% if track.committee != nil%>
        <td><%= track.committee.name %></td>
        <% else %>
          <td><%= "no committee" %></td
        <% end %>
        <td><%= track.userid %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>


