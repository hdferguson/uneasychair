<% if @author.name.nil? or @author.name == "" %>
    <br />
    <br />
    <h2>Edit Author's Profile</h2>
<% else %>
    <br />
    <br />
    <h2>Edit <%= @author.name %>'s Profile</h2>
<% end %>

<%= simple_form_for(@author, as: @author, url: author_path(@author), html: { method: :patch }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :email, required: true %>
   

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>