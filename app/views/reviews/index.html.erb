<p id="notice"><%= notice %></p>

<br />
<br />
<h1>Reviews</h1>
<% if current_account.accountable_type == "SuperAccount" %>

<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Score(0-10)</th>
      <th>Comments</th>
      <th>Paper Author</th>
      <th>Paper</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.score %></td>
        <td><%= review.comments %></td>
        <td><%= review.paper.author %></td>
        <td><%= link_to "Download Paper",review.paper.attachment_url %></td>
        <td><%= link_to 'Show', review %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
<% else %>
    <h3>Admins only.</h3>
<% end %>
