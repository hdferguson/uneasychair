<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<br />
<h1>Reviews</h1>


<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Score(0-10)</th>
      <th>Comments</th>
      <th>Paper Author</th>
      <th>Paper</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <% if review.memberid == current_account.id %>
          <td><%= review.score %></td>
          <td><%= review.comments %></td>
          <td><%= review.paper.author %></td>
          <td><%= link_to "Download Paper",review.paper.attachment_url %></td>
          <td><%= link_to 'Show', review %></td>
          <td><%= link_to 'Edit', edit_review_path(review) %></td>
          <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  
</table>